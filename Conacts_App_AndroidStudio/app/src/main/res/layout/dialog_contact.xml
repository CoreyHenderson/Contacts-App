<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/dialog_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:fontFamily="casual"
            android:layout_marginTop="90dp"/>
        <TextView
            android:id="@+id/dialog_number_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Phone Number"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_button_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="CALL"
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/dialog_call"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textColor="#232323"/>
        <Button
            android:id="@+id/dialog_button_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Message"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/dialog_message"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:textColor="#232323"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_person_black"
        android:background="@drawable/circle_background"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:id="@+id/dialog_edit_contact"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/colorOrange"
        android:src="@android:drawable/ic_menu_edit" />

</RelativeLayout>